{
  /**
  VS Code update settings
  */
  "update.showReleaseNotes": true,
  /**
  VS Code terminal settings
  */
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.fontFamily": "Menlo",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.lineHeight": 1,
  /**
  VS Code workbench settings
  */
  "workbench.settings.editor": "ui", // "ui" or "json"
  //   "workbench.colorTheme": "Evondev Dracula Night Contrast",
  "workbench.colorTheme": "Blueberry Banana",
  // "workbench.preferredHighContrastLightColorTheme": "Blueberry Banana",
  "workbench.startupEditor": "none",
  "workbench.sideBar.location": "left",
  /**
  VS Code editor settings
  */
  "editor.accessibilitySupport": "off",
  "editor.guides.indentation": true,
  "editor.lightbulb.enabled": "off", // turn off VS Code suggestions (lightbulb icon)
  "editor.minimap.enabled": false,
  "editor.stickyScroll.enabled": true,
  /**
  File explorer: explicit include/exclude
  */
  "files.exclude": {
    "**/.git": false
  },
  /**
  Formatter settings
  */
  // global values
  "editor.formatOnSave": true, // format all languages on save by default 
  "editor.codeActionsOnSave": {
    "source.fixAll": "always"
  },
  // language-specific values
  "[javascript]": {},
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features", // use the built-in JSON formatter for JSON files w/ comments
  },
  "[markdown]": {
    "editor.formatOnPaste": false,
    "editor.formatOnSave": false,
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    }
  },
  "[rego]": {
    "editor.formatOnSave": false
  },
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform"
  },
  "[typescript]": {},
  "[typescriptreact]": {},
  "files.associations": {
    "*.yml": "yaml"
  },
  /**
  Security settings
  */
  "security.workspace.trust.untrustedFiles": "open", // turn off untrusted file dialog
  /**
  Git Lens extension settings
  */
  "gitlens.integrations.enabled": true,
  "gitlens.views.commitDetails.files.layout": "tree",
  /**
  Bun settings
  */
  "bun.debugTerminal.enabled": true,
  /**
  Code Runner extension settings
  */
  "code-runner.executorMapByGlob": { // run JavaScript & TypeScript files w/ Bun
    "*.js": "bun",
    "*.ts": "bun"
  },
  "code-runner.runInTerminal": true,
  /**
  GitHub Copilot settings
  */
  "github.copilot.chat.editor.temporalContext.enabled": true, // include recent file context to inline chat
  "github.copilot.nextEditSuggestions.enabled": false,
  "github.copilot.enable": {
    "*": true, // enable/disable copilot entirely
    "plaintext": false,
    "markdown": false,
    "scminput": false
  }
}