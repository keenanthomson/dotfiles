{
    "mcpServers": {
        "figma": {
            "type": "http",
            "url": "https://mcp.figma.com/mcp"
        },
        "gitkraken": {
            "command": "gk",
            "args": [
                "mcp"
            ]
        },
        "diagnostics": {
            "command": "npx",
            "args": [
                "-y",
                "mcp-diagnostics"
            ],
            "description": "Tool to retrieve IDE diagnostic information"
        }
    }
}