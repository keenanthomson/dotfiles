{
    "permissions": {
        "allow": [
            "Bash(npm run lint)",
            "Bash(npm run test:*)",
            "Read(~/.zshrc)"
        ],
        "deny": [
            "Bash(curl:*)",
            "Read(./.env)",
            "Read(./.env.*)",
            "Read(./secrets/**)"
        ]
    },
    "env": {
        "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1"
    },
    "statusLine": {
        "type": "command",
        "command": "printf '⛏️🔧🔨🛠️: %s' \"$(basename \"$(pwd)\")\""
    }
}